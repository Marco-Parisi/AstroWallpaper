<Window x:Class="AstroWallpaperWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AstroWallpaperWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="ServiceStatusLabel" Text="ciao"/>
            <StackPanel Orientation="Horizontal">
                <Button Click="StartServiceButton_Click" Content="Start"/>
                <Button Click="StopServiceButton_Click" Content="Stop"/>
            </StackPanel>
            <CheckBox x:Name="apodEnabledCheckBox" Content="Abilita APOD" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
            <CheckBox x:Name="hubbleEnabledCheckBox" Content="Abilita Hubble" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0"/>
            <TextBox x:Name="intervalTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0" Width="200"/>
            <Button Content="Salva Impostazioni" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,120,0,0" Click="SaveSettingsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
